<p id="notice"><%= notice %></p>

<div>
  <h1><%= @directory.name %></h1>  
  <h1><%= link_to '+', new_card_path(directory_id: @directory.id) %></h1>
</div>                             
<hr />

<table>
<% @directory.cards.each do |card| %>
  <tr>
    <td><%= card.word %></td>
    <td><%= card.mean %></td>
    <td><%= link_to 'X', card, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


